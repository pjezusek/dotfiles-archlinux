# General settings {{{
# set modifier
set $super Mod4
set $alt Mod1
set $Monitor_1 HDMI-0
set $Monitor_2 DP-5
set $Audio_1 alsa_output.usb-Kingston_HyperX_Virtual_Surround_Sound_00000000-00.analog-stereo
set $Audio_2 alsa_output.pci-0000_01_00.1.hdmi-stereo

# Disable tailing drag
bindsym button1 focus

# set font
font pango: Fira Code Nerd Font 12

for_window [class=".*"] border pixel 0

gaps inner 10
gaps outer 0
smart_gaps on
smart_borders on
popup_during_fullscreen smart
workspace_auto_back_and_forth yes
# }}}

# Autostart {{{
exec --no-startup-id picom -b
exec --no-startup-id xrandr --output $Monitor_2 --auto --left-of $Monitor_1 --output $Monitor_1 --primary
exec --no-startup-id feh --bg-fill ~/.config/wallpaper.jpg
exec --no-startup-id pulseaudio -D
exec --no-startup-id flameshot &
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id blueman-applet
exec --no-startup-id nextcloud
exec --no-startup-id thunderbird
exec --no-startup-id keepassxc
exec --no-startup-id kitty
exec --no-startup-id xinput map-to-output 18 $Monitor_1
exec --no-startup-id xinput map-to-output 19 $Monitor_1
exec --no-startup-id xinput map-to-output 20 $Monitor_1
exec --no-startup-id xinput map-to-output 21 $Monitor_1
# }}}

# Layout {{{
bar {
  output $Monitor_1
  mode hide
  hidden_state hide

  position  top

  font pango:Fira Code Nerd Font 12
  strip_workspace_numbers yes

  bindsym button4 nop
  bindsym button5 nop
  bindsym button1 nop

  colors {
    background #2f343f
    statusline #2f343f
    separator #4b5262

    # colour of border, background, and text
    focused_workspace   #2f343f #bf616a #d8dee8
    active_workspace    #2f343f #2f343f #d8dee8
    inactive_workspace  #2f343f #2f343f #d8dee8
    urgent_workspace    #2f343f #ebcb8b #2f343f
  }
  status_command i3status
}

bar {
  mode hide
  hidden_state hide
  output $Monitor_2
  tray_output none

  position top

  font pango:Fira Code Nerd Font 13
  strip_workspace_numbers yes

  bindsym button4 nop
  bindsym button5 nop
  bindsym button1 nop

  colors {
    background #2f343f
    statusline #2f343f
    separator #4b5262

    # colour of border, background, and text
    focused_workspace   #2f343f #bf616a #d8dee8
    active_workspace    #2f343f #2f343f #d8dee8
    inactive_workspace  #2f343f #2f343f #d8dee8
    urgent_workspace    #2f343f #ebcb8b #2f343f
  }
}
# colour of border, background, text, indicator, and child_border
client.focused                  #bf616a #2f343f #d8dee8 #bf616a #e60073
client.focused_inactive #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.unfocused                #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.urgent                   #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.placeholder              #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.background               #2f343f
#}}}

# Workspaces definition {{{
# terminal
set $terminal_ws "1:&#xf120; terminal"
# browser
set $browser_ws "2:&#xf269; firefox"
# mail client
# set $mail_client_ws "3:&#xf0e0; thunderbird"
# watching/reading
set $watching_reading_ws "4:&#xfad9; reading"
# gimp
set $gimp_ws "5:&#xf1fc; graphic"
# remote
set $remote_ws "6:&#xf1e6; remote"
# office
set $office_ws "7:&#xf15c; office"
# ide
set $ide_ws "8:&#xf1c9; IDE"
# debug
set $debug_ws "9:&#xf188; debug"
# communication
set $communities_ws "10:&#xf095; communities"
# games
set $games_ws "11:&#xf11b; games"
# home
set $home_ws "12:&#xf015; home"
# private-left
set $private_left_ws "13:&#xf023;L private"
# private-right
set $private_right_ws "14:&#xf023;P private"
# }}}

# Workspace configuration {{{
workspace $terminal_ws output $Monitor_1
workspace $browser_ws output $Monitor_2
workspace $mail_client_ws output $Monitor_1
workspace $watching_reading_ws output $Monitor_1
workspace $gimp_ws output $Monitor_1
workspace $remote_ws output $Monitor_1
workspace $office_ws output $Monitor_1
workspace $ide_ws output $Monitor_1
workspace $debug_ws output $Monitor_2
workspace $communities_ws output $Monitor_2
workspace $games_ws output $Monitor_1
workspace $home_ws output $Monitor_1
workspace $private_left_ws output $Monitor_2
workspace $private_right_ws output $Monitor_1

focus_on_window_activation focus
# }}}

# Key bindings {{{
# start a terminal
bindsym $super+Return exec kitty

# start rofi
bindsym F3 exec "rofi -show drun -font 'Source Code Pro 12' -show-icons"

# kill focused window
bindsym $alt+F4 kill

# print screen
bindsym Print exec flameshot gui

# change focus
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right

# move focused window
bindsym $super+Shift+h move left
bindsym $super+Shift+j move down
bindsym $super+Shift+k move up
bindsym $super+Shift+l move right

# split in horizontal orientation
bindsym $super+Control+e split h

# split in vertical orientation
bindsym $super+Control+v split v

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# change container layout split
bindsym $super+Control+s layout toggle split

bindsym $alt+w layout toggle

# toggle tiling / floating
bindsym $alt+space floating toggle

# change focus between tiling / floating windows
bindsym $super+Shift+space focus mode_toggle

# switch to workspace
bindsym $super+q workspace $terminal_ws
bindsym $super+e workspace $browser_ws
bindsym $super+1 workspace $watching_reading_ws
bindsym $super+t workspace $gimp_ws
bindsym $super+r workspace $remote_ws
bindsym $super+x workspace $office_ws
bindsym $super+z workspace $ide_ws
bindsym $super+w workspace $debug_ws
bindsym $super+c workspace $communities_ws
bindsym $super+g workspace $games_ws
bindsym $super+3 workspace $home_ws

# move focused container to workspace
bindsym $super+Shift+q move container to workspace $terminal_ws
bindsym $super+Shift+e move container to workspace $browser_ws
bindsym $super+Shift+1 move container to workspace $watching_reading_ws
bindsym $super+Shift+t move container to workspace $gimp_ws
bindsym $super+Shift+r move container to workspace $remote_ws
bindsym $super+Shift+x move container to workspace $office_ws
bindsym $super+Shift+z move container to workspace $ide_ws
bindsym $super+Shift+w move container to workspace $debug_ws
bindsym $super+Shift+c move container to workspace $communities_ws
bindsym $super+Shift+g move container to workspace $games_ws
bindsym $super+Shift+3 move container to workspace $home_ws

# Scratchpad
for_window [class="KeePassXC"] move scratchpad
bindsym $super+Shift+minus move scratchpad
bindsym $super+minus scratchpad show
bindsym $super+a [class="KeePassXC"] scratchpad show; resize set 1500 1000; move position center
bindsym $super+Shift+m mark "music", move scratchpad
bindsym $super+m [con_mark="music"] scratchpad show; resize set 1500 1000; move position center
bindsym $super+Shift+n mark "notes", move scratchpad
bindsym $super+n [con_mark="notes"] scratchpad show, resize set 1500 1000; move position center
bindsym $super+Shift+2 mark "thunderbird", move scratchpad
bindsym $super+2 [con_mark="thunderbird"] scratchpad show; resize set 95ppt 95ppt; move position center
bindsym $super+Shift+s mark "stock", move scratchpad
bindsym $super+s [con_mark="stock"] scratchpad show; resize set 1500 1000; move position center
bindsym $super+Shift+p mark "preview", move scratchpad
bindsym $super+p [con_mark="preview"] scratchpad show; resize set 95ppt 95ppt; move position center
bindsym $super+Shift+d mark "work", move scratchpad
bindsym $super+d [con_mark="work"] scratchpad show; resize set 95ppt 95ppt; move position center

# Dunst
bindsym $alt+c exec dunstctl close-all
bindsym $alt+h exec dunstctl history-pop
# }}}

# Assign workspace {{{
